{
  "extends": "standard",
  "plugins": [
    "standard"
  ],
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "semi": [ 2, "always" ],
    "quotes": [ 1, "single" ],
    "no-undef": 0,
    "global-strict": 0,
    "no-extra-semi": 1,
    "no-underscore-dangle": 0,
    "no-console": 0,
    "no-multi-spaces": 0,
    "no-extra-bind": 0,
    "curly": 0,
    "no-use-before-define": 0,
    "quotes": 0,
    "no-unused-vars": 1,
    "no-irregular-whitespace": 0,
    "camelcase": 0,
    "new-cap": 0,
    "space-before-function-paren": 0,
    "handle-callback-err": 0,
    "keyword-spacing": 0
  }
}